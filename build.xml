<?xml version="1.0" encoding="UTF-8"?>
<project name="tulip" default="all" basedir=".">

    <property name="srcDir" value="src/" />
    <property name="bldDir" value="build/" />

<target name="clean">
<delete dir="${bldDir}" />
<mkdir dir="${bldDir}" />
        <mkdir dir="${bldDir}/classes" />
        <mkdir dir="${bldDir}/jar" />
</target>

    <target name="compile" depends="clean">
<javac srcdir="${srcDir}" destdir="${bldDir}/classes">
<include name="**/*.java" />
</javac>
</target>
    
<target name="jar" depends="compile">
<jar destfile="${bldDir}/jar/tulip.jar">
                    <fileset dir="${bldDir}/classes">
                            <include name="**/*.class"/>
                    </fileset>

                    <manifest>
      <attribute name="Main-Class" value="tulip.Tulip"/>
      </manifest>
      </jar>
   </target>

   <target name="javadoc" depends="compile">
     <javadoc
     destdir="${bldDir}/docs"
     author="true"
     version="true">
    
      <fileset dir="${srcDir}">
        <include name="**/*.java"/>
      </fileset>
    </javadoc>
   </target>
    
    <target name="all" depends="jar, javadoc"/>


</project>